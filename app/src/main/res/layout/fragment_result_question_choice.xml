<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_extra_larger"
        android:background="@drawable/bg_rec_radius_10"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        tools:context=".presentation.ui.quiz.resultquiz.ResultQuestionChoiceFragment">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_result_quiz_item_question_choice"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="문제 내용"
            android:textColor="@color/green"
            android:textSize="@dimen/text_caption" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/ll_result_quiz_item_choice1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_extra_small"
                android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_result_quiz_item_choice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_select_1" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_result_quiz_item_choice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_extra_small"
                    android:text="선택지"
                    android:textSize="@dimen/text_smaller"
                    android:textColor="@color/green"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_result_quiz_item_choice2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_extra_small"
                android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_result_quiz_item_choice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_select_2" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_result_quiz_item_choice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_extra_small"
                    android:text="선택지"
                    android:textSize="@dimen/text_smaller"
                    android:textColor="@color/green"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_result_quiz_item_choice3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_extra_small"
                android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_result_quiz_item_choice3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_select_3" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_result_quiz_item_choice3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_extra_small"
                    android:text="선택지"
                    android:textSize="@dimen/text_smaller"
                    android:textColor="@color/green"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_result_quiz_item_choice4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_extra_small"
                android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_result_quiz_item_choice4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_select_4" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_result_quiz_item_choice4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_extra_small"
                    android:text="선택지"
                    android:textSize="@dimen/text_smaller"
                    android:textColor="@color/green"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
