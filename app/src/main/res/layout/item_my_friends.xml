<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_smaller">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_friend_thumbnail_item"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tv_friend_name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_extra_small"
            android:ellipsize="end"
            android:maxWidth="50dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="@dimen/text_mini"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/iv_friend_thumbnail_item"
            app:layout_constraintStart_toStartOf="@+id/iv_friend_thumbnail_item"
            app:layout_constraintTop_toBottomOf="@+id/iv_friend_thumbnail_item" />

</androidx.constraintlayout.widget.ConstraintLayout>