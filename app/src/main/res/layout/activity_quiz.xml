<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_quiz_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_quiz_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quiz_title"
            android:textColor="@color/green"
            android:textSize="@dimen/text_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bt_quiz_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow_white"
            app:layout_constraintBottom_toBottomOf="@+id/tv_quiz_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_quiz_title" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bt_quiz_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu"
            app:layout_constraintBottom_toBottomOf="@+id/tv_quiz_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_quiz_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_quiz_top_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_quiz_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@color/khaki"
                android:layout_marginTop="100dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_quiz_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="user"
                android:textSize="@dimen/text_smaller"
                android:textStyle="bold"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_quiz_support_name"
                app:layout_constraintTop_toBottomOf="@+id/civ_quiz_image" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_quiz_support_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_extra_smaller"
                android:text="@string/quiz_support_name"
                android:textSize="@dimen/text_smaller"
                app:layout_constraintLeft_toRightOf="@+id/tv_quiz_user_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_quiz_user_name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_quiz_support_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quiz_support_name2"
                android:textSize="@dimen/text_smaller"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_quiz_user_name" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_quiz_support"
                android:text="@string/quiz_support_btn"
                android:textSize="@dimen/text_caption"
                android:textColor="@color/green"
                android:layout_marginTop="90dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_quiz_support_name2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt_quiz_alone"
                android:text="@string/quiz_alone"
                android:textSize="@dimen/text_smaller"
                android:background="@drawable/white_long_box"
                android:layout_marginLeft="@dimen/margin_extra_larger"
                android:layout_marginRight="@dimen/margin_extra_larger"
                android:layout_marginTop="@dimen/margin_medium"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_quiz_support"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt_quiz_friend"
                android:text="@string/quiz_friend"
                android:textSize="@dimen/text_smaller"
                android:background="@drawable/white_long_box"
                android:layout_marginLeft="@dimen/margin_extra_larger"
                android:layout_marginRight="@dimen/margin_extra_larger"
                android:layout_marginTop="@dimen/margin_smaller"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bt_quiz_alone"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_quiz_custom"
                android:text="@string/quiz_custom"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="@dimen/text_small"
                android:layout_marginTop="@dimen/margin_extra_larger"
                android:layout_marginBottom="@dimen/margin_extra_larger"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bt_quiz_friend"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>