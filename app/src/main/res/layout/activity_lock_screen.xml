<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl_lock"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_gray">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:textSize="@dimen/text_headline_big"
        android:textColor="@color/white"
        android:text="00:00"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:textColor="@color/white"
        android:textSize="@dimen/text_caption"
        android:text="M.D(D)"
        android:layout_marginTop="@dimen/margin_extra_small"
        app:layout_constraintTop_toBottomOf="@+id/time"
        app:layout_constraintLeft_toLeftOf="@+id/time"
        app:layout_constraintRight_toRightOf="@+id/time"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question"
        android:text="@string/lock_question"
        android:textSize="@dimen/text_caption"
        android:textColor="@color/white"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="@dimen/margin_extra_larger"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lock_title"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lock_title"
        android:text="연리지"
        android:textSize="@dimen/text_headline_big"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/margin_larger"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question"
        app:layout_constraintBottom_toTopOf="@+id/lock_description"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.8"
        android:id="@+id/lock_description"
        android:text="1. 두 나무의 가지가 서로 맞닿아서 결이
서로 통한 것. 
2. 화목(和睦)한 부부(夫婦)나 남녀(男女) 사이를 비유적(比喩的)으로 이르는 말. "
        android:textSize="@dimen/text_caption"
        android:textColor="@color/white"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lock_title"
        app:layout_constraintBottom_toTopOf="@+id/lock_true"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lock_true"
        android:background="@null"
        android:src="@drawable/ic_lock_white_o"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginRight="@dimen/margin_medium"
        app:layout_constraintTop_toBottomOf="@+id/lock_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/lock_false"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lock_false"
        android:background="@null"
        android:src="@drawable/ic_lock_white_x"
        app:layout_constraintTop_toTopOf="@+id/lock_true"
        app:layout_constraintBottom_toBottomOf="@+id/lock_true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/lock_true"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answer"
        android:text="@string/lock_correct_answer"
        android:textColor="@color/white"
        android:textSize="@dimen/text_caption"
        android:layout_margin="@dimen/margin_larger"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/correct_answer"
        android:text="O"
        android:textColor="@color/white"
        android:textSize="@dimen/text_caption"
        android:layout_marginLeft="@dimen/padding_extra_smaller"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@+id/answer"
        app:layout_constraintBottom_toBottomOf="@+id/answer"
        app:layout_constraintLeft_toRightOf="@+id/answer"/>

</androidx.constraintlayout.widget.ConstraintLayout>