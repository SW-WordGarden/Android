<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_shop_gradient">
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/bt_cancel"
        android:background="@null"
        android:src="@drawable/ic_shop_cancel"
        android:layout_marginLeft="@dimen/margin_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bg_top_coin"
        app:layout_constraintBottom_toBottomOf="@+id/bg_top_coin"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="95dp"
        android:layout_height="33dp"
        android:id="@+id/bg_top_coin"
        android:background="@drawable/bg_garden_top"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bg_top_water"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/ic_top_coin"
        android:id="@+id/iv_top_coin"
        app:layout_constraintTop_toTopOf="@+id/bg_top_coin"
        app:layout_constraintBottom_toBottomOf="@+id/bg_top_coin"
        app:layout_constraintLeft_toRightOf="@+id/bg_top_coin"
        app:layout_constraintRight_toRightOf="@+id/bg_top_coin"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:textSize="@dimen/text_smaller"
        android:textColor="@color/white"
        android:id="@+id/tv_coin"
        app:layout_constraintTop_toTopOf="@+id/bg_top_coin"
        app:layout_constraintBottom_toBottomOf="@+id/bg_top_coin"
        app:layout_constraintLeft_toLeftOf="@+id/bg_top_coin"
        app:layout_constraintRight_toRightOf="@+id/bg_top_coin"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="95dp"
        android:layout_height="33dp"
        android:id="@+id/bg_top_water"
        android:layout_marginRight="40dp"
        android:background="@drawable/bg_garden_top"
        app:layout_constraintTop_toTopOf="@+id/bg_top_coin"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/ic_shop_water"
        android:id="@+id/iv_top_water"
        app:layout_constraintTop_toTopOf="@+id/bg_top_water"
        app:layout_constraintBottom_toBottomOf="@+id/bg_top_water"
        app:layout_constraintLeft_toRightOf="@+id/bg_top_water"
        app:layout_constraintRight_toRightOf="@+id/bg_top_water"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:textSize="@dimen/text_smaller"
        android:textColor="@color/white"
        android:id="@+id/tv_water"
        app:layout_constraintTop_toTopOf="@+id/bg_top_water"
        app:layout_constraintBottom_toBottomOf="@+id/bg_top_water"
        app:layout_constraintLeft_toLeftOf="@+id/bg_top_water"
        app:layout_constraintRight_toRightOf="@+id/bg_top_water"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shop_title"
        app:layout_constraintBottom_toTopOf="@+id/water_bin"
        android:textSize="@dimen/text_text"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/water_bin"
        app:layout_constraintRight_toRightOf="@+id/water_bin"
        android:layout_marginBottom="@dimen/margin_smaller"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_shop_water_bin"
        android:id="@+id/water_bin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_buy_water"
        android:background="@drawable/ic_shop_price_btn"
        android:text="1000P"
        android:textSize="@dimen/text_text"
        android:textColor="@color/green"
        app:layout_constraintLeft_toLeftOf="@+id/water_bin"
        app:layout_constraintRight_toRightOf="@+id/water_bin"
        app:layout_constraintBottom_toBottomOf="@+id/water_bin"
        android:layout_marginBottom="80dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star2"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>