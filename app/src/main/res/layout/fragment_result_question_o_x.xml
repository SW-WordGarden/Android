<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_extra_larger"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        tools:context=".presentation.ui.quiz.resultquiz.ResultQuestionOXFragment">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_result_quiz_item_question_ox_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:gravity="center"
            android:text="지시문"
            android:textColor="@color/green"
            android:textSize="@dimen/text_small" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_result_quiz_item_question_ox_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_medium"
                    android:gravity="center"
                    android:text="문제 내용"
                    android:textFontWeight="600"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_caption" />
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_larger"
            android:layout_marginBottom="@dimen/margin_extra_larger"
            android:layout_weight="1">

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_result_quiz_item_question_o"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_rec_stroke_radius_10"
                android:src="@drawable/ic_o"
                android:enabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_result_quiz_item_question_x"
                app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_result_quiz_item_question_x"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_rec_stroke_radius_10"
                android:src="@drawable/ic_x"
                android:enabled="false"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_result_quiz_item_question_o"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>