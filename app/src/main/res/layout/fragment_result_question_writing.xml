<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_extra_larger"
        android:background="@drawable/bg_rec_radius_10"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        tools:context=".presentation.ui.quiz.resultquiz.ResultQuizFragment">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_result_quiz_item_question_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_extra_larger"
            android:layout_marginBottom="@dimen/margin_extra_larger"
            android:gravity="center"
            android:text="문제"
            android:textFontWeight="600"
            android:textColor="@color/green"
            android:textSize="@dimen/text_caption" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_result_quiz_item_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_extra_large"
            android:layout_marginEnd="@dimen/margin_extra_larger"
            android:text="@string/result_quiz_correct"
            android:textColor="@color/green"
            android:textSize="@dimen/text_caption" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_result_quiz_item_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_extra_larger"
            android:layout_marginBottom="@dimen/margin_extra_larger"
            android:text="@string/result_quiz_answer"
            android:textColor="@color/light_pink"
            android:textSize="@dimen/text_caption" />
</LinearLayout>